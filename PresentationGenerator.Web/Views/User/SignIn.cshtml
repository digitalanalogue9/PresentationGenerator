@model PresentationGenerator.Core.Views.Models.Output.UserSignInViewModel
@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}
@section navigation
{
}

<h2>Sign In</h2>
@using (Html.BeginForm("SignIn", "User", FormMethod.Post, new { @id = "signin form-horizontal" }))
{
    <div class="control-group">
      <label class="control-label" for="Username">Username</label>
      <div class="controls">
        <input type="text" class="input-xxlarge" id="Username" name="Username"/>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="Password">Password</label>
      <div class="controls">
        <input type="password" class="input-xxlarge" id="Password" name="Password"/>
      </div>
    </div>
    
    <div class="row">
        <div class="span12">
            <label for="Username">Remember me</label>
            <input type="checkbox" id="StayLoggedIn" name="StayLoggedIn" />
        </div>
    </div>
    <div class="form-actions">
            <button class="btn btn-primary" type="submit">Sign In</button>
            @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-success" })
    </div>
}
